<schema xmlns="http://purl.oclc.org/dsdl/schematron">
  <ns uri="http://www.xbrl.org/2013/inlineXBRL" prefix="ix"/>
  <ns uri="http://www.w3.org/1999/xlink" prefix="xlink"/>
  <ns uri="http://www.xbrl.org/2003/linkbase" prefix="link"/>

  <pattern>

    <rule context="/">

      <assert test="//link:schemaRef">
	schemaRef element must exist
      </assert>

      <assert test="//link:schemaRef[@xlink:type]">
	schemaRef type must exist
      </assert>

      <assert test="//link:schemaRef/@xlink:type='simple'">
	schemaRef type must be 'simple'
      </assert>

      <assert test="//ix:nonNumeric[@name='uk-bus:ReportTitle']">
	ReportTitle should exist.
      </assert>

      <assert test="//ix:nonNumeric[@name='uk-bus:BusinessReportPublicationDate']">
	BusinessReportPublicationDate should exist.
      </assert>

      <assert test="//ix:nonNumeric[@name='uk-bus:BusinessReportPublicationDate']/@format='ixt2:datedaymonthyearen'">
	BusinessReportPublicationDate should have date format.
      </assert>

    </rule>

  </pattern>

</schema>
